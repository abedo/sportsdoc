{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
    <div class="row ml-3 pt-3">
        <a href="{{ path('place_new') }}" type="button" class="btn btn-primary btn-lg">Add place</a>
    </div>

    <div class="row ml-3 pt-3">
        <div class="alert alert-primary" role="alert">
            A simple primary alert—check it out!
        </div>
    </div>

    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            {% for place in places %}
                <div class="swiper-slide">
                    <div class="card">
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="inputAddress">Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="1234 Main St"
                                        value="{{ place.name }}" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="inputAddress2">Address</label>
                                    <input type="text" class="form-control" id="address" placeholder="Apartment, studio, or floor"
                                        value="{{ place.address }}" readonly>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="inputCity">City</label>
                                        <input type="text" class="form-control" id="inputCity"
                                            value="{{ place.city }}">
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputZip">Zip</label>
                                        <input type="text" class="form-control" id="inputZip"
                                               value="{{ place.zip }}">
                                    </div>
                                </div>
{#                                <div class="form-group">#}
{#                                    <button type="submit" class="btn btn-primary">Sign in</button>#}
{#                                    <button type="submit" class="btn btn-primary">Sign in</button>#}
{#                                </div>#}
                            </form>
                            <a href="#" class="btn btn-success btn-cancel">Add game</a>
                        </div>
                        <div class="card-header">
                            Przegląd
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm btn-dark">
                                    Gry
                                </div>
                                <div class="col-sm btn-danger">
                                    Należności
                                </div>
                                <div class="col-sm btn-primary">
                                    Osoby
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm">
                                    2020-09-01
                                </div>
                                <div class="col-sm">
                                    -250
                                </div>
                                <div class="col-sm">
                                    sportsdoc
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

{% endblock %}
